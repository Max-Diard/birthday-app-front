<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:textSize="35sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/input_username"
            android:layout_width="@dimen/size_input"
            android:layout_height="wrap_content"
            android:hint="@string/labelUsername"
            android:text="" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="@dimen/size_input"
            android:layout_height="wrap_content"
            android:hint="@string/labelEmail"
            android:text="" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="@dimen/size_input"
            android:layout_height="wrap_content"
            android:hint="@string/labelPassword"
            android:inputType="textPassword"
            android:text="" />

        <EditText
            android:id="@+id/input_confirmation"
            android:layout_width="@dimen/size_input"
            android:layout_height="wrap_content"
            android:hint="@string/labelConfirmation"
            android:inputType="textPassword"
            android:text="" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title"
            android:layout_marginTop="30dp">
        </Button>
    </LinearLayout>
</LinearLayout>